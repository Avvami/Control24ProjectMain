<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/appBackground"
    tools:context=".activities.ObjectsListViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/objectsListViewBackCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bgLogoLL"
        app:layout_constraintBottom_toBottomOf="@id/bgLogoLL">

        <ImageView
            android:id="@+id/leftArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/left_arrow_image"
            android:foreground="@drawable/oval_ripple_effect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left_arrow"
            app:tint="?attr/textOnBackgroundColor" />

        <TextView
            android:id="@+id/objectsListViewTV"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/objects_list_settings_title"
            android:textColor="?attr/textOnBackgroundColor"
            app:layout_constraintBaseline_toBaselineOf="@+id/leftArrow"
            app:layout_constraintStart_toEndOf="@+id/leftArrow" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bgLogoLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_view_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/companyLogoIV"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/company_logo_image"
            android:src="@drawable/company_logo_small" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bgLogoLL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/shortMCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/objects_short"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="VisualLintButtonSize" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/shortViewCL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingVertical="8dp"
                android:elevation="1dp"
                android:background="@drawable/card_objects_list_ripple_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shortMCheckBox">

                <ImageView
                    android:id="@+id/carIconIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/car_image"
                    app:layout_constraintBottom_toBottomOf="@+id/mapDisplayMSwitch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mapDisplayMSwitch"
                    app:srcCompat="@drawable/icon_car"
                    app:tint="?attr/cardItemsColorPrimary" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/carIconIV"
                    app:layout_constraintTop_toTopOf="@id/carIconIV"
                    app:layout_constraintBottom_toBottomOf="@id/carIconIV">

                    <TextView
                        android:id="@+id/carNameTemplateTV"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/cardItemsColorPrimary"
                        android:text="@string/car_name_template"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/speedTemplateTV"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speed"
                        android:textColor="?attr/cardItemsColorSecondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/carNameTemplateTV"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/mapDisplayMSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:clickable="false"
                    app:layout_constraintBottom_toBottomOf="@+id/downArrow"
                    app:layout_constraintEnd_toStartOf="@+id/downArrow"
                    app:layout_constraintTop_toTopOf="@+id/downArrow"/>

                <CheckBox
                    android:id="@+id/downArrow"
                    android:button="@drawable/arrow_drop_state"
                    android:buttonTint="?attr/cardItemsColorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:clickable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckBox
                android:id="@+id/detailedMCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/objects_detailed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shortViewCL"
                tools:ignore="VisualLintButtonSize" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailedViewCL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:paddingVertical="8dp"
                android:elevation="1dp"
                android:background="@drawable/card_objects_list_ripple_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailedMCheckBox">

                <ImageView
                    android:id="@+id/carIconIV2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/car_image"
                    app:layout_constraintBottom_toBottomOf="@+id/mapDisplayMSwitch2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mapDisplayMSwitch2"
                    app:srcCompat="@drawable/icon_car"
                    app:tint="?attr/cardItemsColorPrimary" />

                <TextView
                    android:id="@+id/carNameTemplateTV2"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="?attr/cardItemsColorPrimary"
                    android:text="@string/car_name_template"
                    app:layout_constraintStart_toEndOf="@id/carIconIV2"
                    app:layout_constraintTop_toTopOf="@id/carIconIV2"
                    app:layout_constraintBottom_toBottomOf="@id/carIconIV2" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/mapDisplayMSwitch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:clickable="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/locationCL2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mapDisplayMSwitch2">

                    <ImageView
                        android:id="@+id/locationIconIV2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/location_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/icon_location"
                        app:tint="?attr/cardItemsColorPrimary" />

                    <TextView
                        android:id="@+id/locationTemplateTV2"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/location_template"
                        android:textColor="?attr/cardItemsColorPrimary"
                        app:layout_constraintBottom_toBottomOf="@+id/locationIconIV2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/locationIconIV2"
                        app:layout_constraintTop_toTopOf="@+id/locationIconIV2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/dashboardIconIV2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/dashboard_image"
                    app:srcCompat="@drawable/icon_dashboard"
                    app:tint="?attr/cardItemsColorPrimary"
                    app:layout_constraintStart_toStartOf="@+id/locationCL2"
                    app:layout_constraintTop_toTopOf="@+id/downArrow2"
                    app:layout_constraintBottom_toBottomOf="@+id/downArrow2"/>

                <TextView
                    android:id="@+id/speedTemplateTV2"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/speed"
                    android:textColor="?attr/cardItemsColorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/dashboardIconIV2"
                    app:layout_constraintStart_toEndOf="@+id/dashboardIconIV2"
                    app:layout_constraintTop_toTopOf="@+id/dashboardIconIV2" />

                <ImageView
                    android:id="@+id/timeIconIV2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/dashboard_image"
                    app:srcCompat="@drawable/icon_clock"
                    app:tint="?attr/cardItemsColorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/speedTemplateTV2"
                    app:layout_constraintStart_toEndOf="@+id/speedTemplateTV2"
                    app:layout_constraintTop_toTopOf="@+id/speedTemplateTV2" />

                <TextView
                    android:id="@+id/timeTemplateTV2"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/time_template"
                    android:textColor="?attr/cardItemsColorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/timeIconIV2"
                    app:layout_constraintEnd_toStartOf="@+id/downArrow2"
                    app:layout_constraintStart_toEndOf="@+id/timeIconIV2"
                    app:layout_constraintTop_toTopOf="@+id/timeIconIV2" />

                <CheckBox
                    android:id="@+id/downArrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/arrow_drop_state"
                    android:buttonTint="?attr/cardItemsColorPrimary"
                    android:layout_marginEnd="8dp"
                    android:clickable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationCL2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>