<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginVertical="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dialog">

        <TextView
            android:id="@+id/addDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="@string/add_driver"
            android:textColor="?attr/textOnItemsColor"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="60dp"
            android:layout_marginVertical="16dp"
            android:background="?attr/textOnItemsColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/addDriver"
            app:layout_constraintTop_toBottomOf="@+id/addDriver" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/driverNameIL"
            style="@style/TextInputOuterFieldStyleDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_display_bounds_horizontal"
            android:layout_marginTop="16dp"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/driverNameET"
                style="@style/TextInputInnerFieldStyleDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/driver_name_hint"
                android:inputType="textCapSentences" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/driverPhoneIL"
            style="@style/TextInputOuterFieldStyleDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_display_bounds_horizontal"
            android:layout_marginTop="16dp"
            app:endIconMode="clear_text"
            app:prefixText="+7"
            app:prefixTextAppearance="@style/TextInputInnerFieldStyleDark"
            app:prefixTextColor="?attr/textOnItemsColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/driverNameIL">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/driverPhoneET"
                style="@style/TextInputInnerFieldStyleDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/driver_number_hint"
                android:inputType="phone"
                android:digits="0123456789+" />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_text_button"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saveBtn"
            app:layout_constraintTop_toBottomOf="@+id/driverPhoneIL">

            <TextView
                android:id="@+id/cancelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/driver_cancel"
                android:textAllCaps="true"
                android:textColor="?attr/textOnItemsColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_text_button"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/driverPhoneIL">

            <TextView
                android:id="@+id/saveTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/driver_save"
                android:textAllCaps="true"
                android:textColor="?attr/textOnItemsColor"
                android:textSize="14sp" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>