<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/persistentBottomSheet"
    android:background="@drawable/bg_bottom_overlay"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="64dp">

    <ImageView
        android:id="@+id/collapseIV1"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/minus_image"
        android:src="@drawable/icon_minus_flat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/carNameCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/collapseIV1"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/carIconBackgroundFL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_car_icon_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/carIconIV1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:contentDescription="@string/car_image"
                android:src="@drawable/icon_truck"
                app:tint="?attr/carIconColor" />
        </FrameLayout>

        <TextView
            android:id="@+id/carNameTemplateTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto"
            android:text="@string/car_name_template"
            android:textColor="?attr/textOnItemsColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/carIconBackgroundFL1"
            app:layout_constraintStart_toEndOf="@+id/carIconBackgroundFL1"
            app:layout_constraintTop_toTopOf="@+id/carIconBackgroundFL1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>