<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/persistentBottomSheet"
    android:background="@drawable/bg_bottom_overlay"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="64dp">

    <ImageView
        android:id="@+id/collapseIV1"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/minus_image"
        android:src="@drawable/icon_minus_flat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/carNameCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/collapseIV1"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/carIconBackgroundFL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_car_icon_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/carIconIV1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:contentDescription="@string/car_image"
                android:src="@drawable/icon_truck"
                app:tint="?attr/carIconColor" />
        </FrameLayout>

        <TextView
            android:id="@+id/carNameTemplateTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto"
            android:text="@string/car_name_template"
            android:textColor="?attr/textOnItemsColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/carIconBackgroundFL1"
            app:layout_constraintStart_toEndOf="@+id/carIconBackgroundFL1"
            app:layout_constraintTop_toTopOf="@+id/carIconBackgroundFL1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/infoTypeRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/carNameCL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/periodInfoMRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/radio_button_selector"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@color/transparent"
            android:fontFamily="@font/roboto"
            android:textColor="?attr/textOnItemsColor"
            android:textSize="14sp"
            android:text="@string/period"
            tools:ignore="VisualLintButtonSize"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/dayInfoMRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="8dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_selector"
            android:button="@color/transparent"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/days"
            android:textColor="?attr/textOnItemsColor"
            android:textSize="14sp"
            tools:ignore="VisualLintButtonSize" />
    </RadioGroup>

    <View
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="?attr/dividerColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTypeRG" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dateChangeCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerTop"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leftArrowCL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dateCL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/leftArrowIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/left_arrow_image"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_right_arrow"
                app:tint="?attr/textOnItemsColor" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dateCL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/dateTopTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:textColor="?attr/textOnItemsColor"
                android:text="@string/date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/dateBottomTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textColor="?attr/textSecondaryColor"
                android:text="@string/day_of_week"
                app:layout_constraintStart_toStartOf="@id/dateTopTV"
                app:layout_constraintTop_toBottomOf="@+id/dateTopTV"
                app:layout_constraintEnd_toEndOf="@id/dateTopTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rightArrowCL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="28dp"
            android:paddingEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dateCL"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/rightArrowIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/right_arrow_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_right_arrow"
                app:tint="?attr/textOnItemsColor" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dividerBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="?attr/dividerColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateChangeCL"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>