<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/background_placemark_text"
        android:paddingEnd="14dp"
        android:paddingStart="4dp"
        android:paddingVertical="1dp"
        android:text=""
        android:textColor="?attr/placemarkTextColor"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/rotateImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rotateImage" />

    <ImageView
        android:id="@+id/rotateImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/icon_placemark_rotate"
        android:contentDescription="@string/car_image"/>

    <ImageView
        android:id="@+id/staticImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/rotateImage"
        app:layout_constraintEnd_toEndOf="@+id/rotateImage"
        app:layout_constraintTop_toTopOf="@+id/rotateImage"
        app:layout_constraintBottom_toBottomOf="@+id/rotateImage"
        android:src="@drawable/icon_placemark_truck"
        android:contentDescription="@string/car_image" />

</androidx.constraintlayout.widget.ConstraintLayout>