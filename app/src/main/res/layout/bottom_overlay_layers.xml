<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_overlay">

    <ImageView
        android:id="@+id/collapseIV1"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/minus_image"
        android:src="@drawable/icon_minus_flat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapTypeCL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collapseIV1"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/mapTypeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="?attr/textOnItemsColor"
            android:textSize="16sp"
            android:text="@string/map_type"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <RadioGroup
            android:id="@+id/layersRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapTypeTV">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/schemeMRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@color/transparent"
                android:fontFamily="@font/roboto"
                android:textColor="?attr/textOnItemsColor"
                android:textSize="14sp"
                android:text="@string/map_scheme"
                tools:ignore="VisualLintButtonSize" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/satelliteMRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@color/transparent"
                android:fontFamily="@font/roboto"
                android:textColor="?attr/textOnItemsColor"
                android:textSize="14sp"
                android:text="@string/map_satellite"
                tools:ignore="VisualLintButtonSize" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/hybridMRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@color/transparent"
                android:fontFamily="@font/roboto"
                android:textColor="?attr/textOnItemsColor"
                android:textSize="14sp"
                android:text="@string/map_hybrid"
                tools:ignore="VisualLintButtonSize" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/miscellaneousTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="?attr/textOnItemsColor"
        android:textSize="16sp"
        android:text="@string/miscellaneous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapTypeCL"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/zoomButtonsMCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="8dp"
        android:text="@string/zoom_controls"
        android:background="@drawable/switches_ripple_effect"
        android:buttonTint="?attr/textOnItemsColor"
        android:fontFamily="@font/roboto"
        android:textColor="?attr/textOnItemsColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miscellaneousTV"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>