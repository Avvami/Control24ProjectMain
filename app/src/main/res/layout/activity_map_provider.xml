<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true"
    tools:context=".activities.MapProviderActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapProviderBackCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/companyLogoIV"
        app:layout_constraintBottom_toBottomOf="@id/companyLogoIV">

        <ImageView
            android:id="@+id/leftArrow"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:contentDescription="@string/left_arrow_image"
            android:foreground="@drawable/oval_ripple_effect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left_arrow"
            app:tint="?attr/textOnBackgroundColor" />

        <TextView
            android:id="@+id/mapSettingsTV"
            style="@style/TextTitleLargeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/map_settings"
            app:layout_constraintBaseline_toBaselineOf="@+id/leftArrow"
            app:layout_constraintStart_toEndOf="@+id/leftArrow" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/companyLogoIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/company_logo_image"
        android:src="@drawable/company_logo_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/companyLogoIV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mapProviderTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="?attr/textOnBackgroundColor"
                android:textSize="16sp"
                android:text="@string/map_provider"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <RadioGroup
                android:id="@+id/mapProviderRG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/mapProviderTV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/yandexMapsMRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/radio_button_selector"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:button="@color/transparent"
                    android:fontFamily="@font/roboto"
                    android:textColor="?attr/textOnItemsColor"
                    android:textSize="14sp"
                    android:text="@string/yandex_maps"
                    tools:ignore="VisualLintButtonSize"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/osmMapsMRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_selector"
                    android:button="@color/transparent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/open_street_maps"
                    android:textColor="?attr/textOnItemsColor"
                    android:textSize="14sp"
                    tools:ignore="VisualLintButtonSize" />
            </RadioGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mapTypeCL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapProviderRG"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/mapTypeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="?attr/textOnBackgroundColor"
                    android:textSize="16sp"
                    android:text="@string/map_type"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <RadioGroup
                    android:id="@+id/layersRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mapTypeTV">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/schemeMRadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/radio_button_selector"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:button="@color/transparent"
                        android:fontFamily="@font/roboto"
                        android:textColor="?attr/textOnItemsColor"
                        android:textSize="14sp"
                        android:text="@string/map_scheme"
                        tools:ignore="VisualLintButtonSize" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/satelliteMRadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/radio_button_selector"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:button="@color/transparent"
                        android:fontFamily="@font/roboto"
                        android:textColor="?attr/textOnItemsColor"
                        android:textSize="14sp"
                        android:text="@string/map_satellite"
                        tools:ignore="VisualLintButtonSize" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/hybridMRadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/radio_button_selector"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:button="@color/transparent"
                        android:fontFamily="@font/roboto"
                        android:textColor="?attr/textOnItemsColor"
                        android:textSize="14sp"
                        android:text="@string/map_hybrid"
                        tools:ignore="VisualLintButtonSize" />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/miscellaneousTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="?attr/textOnBackgroundColor"
                android:textSize="16sp"
                android:text="@string/miscellaneous"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapTypeCL"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/zoomButtonsMCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="8dp"
                android:text="@string/zoom_controls"
                android:background="@drawable/switches_ripple_effect"
                android:buttonTint="?attr/textOnBackgroundColor"
                android:fontFamily="@font/roboto"
                android:textColor="?attr/textOnBackgroundColor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/miscellaneousTV"
                tools:ignore="VisualLintButtonSize" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/trafficControlsMCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="8dp"
                android:text="@string/traffic"
                android:background="@drawable/switches_ripple_effect"
                android:buttonTint="?attr/textOnBackgroundColor"
                android:fontFamily="@font/roboto"
                android:textColor="?attr/textOnBackgroundColor"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/zoomButtonsMCheckBox"
                tools:ignore="VisualLintButtonSize" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>