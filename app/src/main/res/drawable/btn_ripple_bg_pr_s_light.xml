<?xml version="1.0" encoding="utf-8"?>
<!--Primary solid button ripple effect-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/material_theme_ref_primary_primary50">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/material_theme_ref_primary_primary50"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/material_theme_sys_light_primary"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</ripple>