<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Control24ProjectMain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_theme_sys_light_primary</item>
        <item name="colorPrimaryVariant">@color/material_theme_sys_light_background</item>
        <item name="colorOnPrimary">@color/material_theme_sys_light_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_theme_sys_light_secondary</item>
        <item name="colorSecondaryVariant">@color/material_theme_sys_light_secondary_container</item>
        <item name="colorOnSecondary">@color/material_theme_sys_light_on_secondary</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LoginTranslucentStatusAndNavigationStyle" parent="Theme.Control24ProjectMain">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TextInputOuterFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_text_outline_color</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Custom.TextInputLayout.Rounded</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/material_theme_ref_secondary_secondary100</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textColorHint">@color/material_theme_ref_secondary_secondary90</item>
        <item name="passwordToggleTint">@color/password_toggle_color</item>
    </style>

    <style name="TextInputInnerFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/material_theme_ref_primary_primary100</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textCursorDrawable">@drawable/cursor_light_theme</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.Custom.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_most</item>
    </style>

    <style name="MaterialButtonSolidStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/material_theme_sys_light_primary</item>
        <item name="android:background">@drawable/btn_ripple_bg_pr_s_light</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/material_theme_sys_light_on_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MaterialTextButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/corner_radius_most</item>
        <item name="rippleColor">@color/material_theme_ref_primary_primary80</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/material_theme_sys_light_on_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CustomStyleableToast">
        <item name="stFont">@font/roboto_medium</item>
        <item name="stColorBackground">@color/material_theme_sys_light_primary</item>
        <item name="stTextColor">@color/material_theme_sys_light_on_primary</item>
        <item name="stTextSize">12sp</item>
        <!--<item name="stIconStart"></item>-->
        <item name="stRadius">12dp</item>
    </style>

    <style name="SplashTheme" parent="LoginTranslucentStatusAndNavigationStyle">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:progressBarStyle">?android:attr/progressBarStyle</item>
    </style>

</resources>